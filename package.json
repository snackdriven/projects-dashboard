{
  "name": "projects-dashboard",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "node server/index.js",
    "dev:all": "pnpm exec turbo dev",
    "build": "tsc -b && vite build",
    "build:all": "pnpm exec turbo build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:all": "pnpm exec turbo lint",
    "type-check": "tsc --noEmit",
    "type-check:all": "pnpm exec turbo type-check",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "pnpm exec turbo clean && rm -rf node_modules",
    "deps:check": "ncu --workspaces",
    "deps:check-interactive": "ncu -i --workspaces",
    "deps:update": "ncu -u --workspaces && pnpm install",
    "deps:update-minor": "ncu -u --target minor --workspaces && pnpm install",
    "env:sync": "./scripts/sync-env.sh --all",
    "env:sync:quantified": "./scripts/sync-env.sh quantified-life",
    "verify": "pnpm build:all && pnpm lint:all && pnpm type-check:all"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-table": "^8.21.3",
    "autoprefixer": "^10.4.22",
    "clsx": "^2.1.1",
    "csv-parse": "^6.1.0",
    "date-fns": "^3.6.0",
    "express": "^5.1.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.554.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "npm-check-updates": "^19.1.2",
    "nx": "22.1.1",
    "turbo": "^2.6.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}